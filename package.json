{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "nyc --reporter=lcov mocha",
    "coverage": "nyc report",
    "e2e": "nightwatch",
    "e2e_firefox": "nightwatch --config nightwatch_firefox.json",
    "e2e_edge": "nightwatch --config nightwatch_edge.json",
    "e2e_ie": "nightwatch --config nightwatch_ie.json",
    "e2e_safari": "nightwatch --config nightwatch_safari.json",
    "sendCoverage": "codeclimate-test-reporter < coverage/lcov.info",
    "eslint": "eslint --fix ./*.js",
	"csslint": "csslint public/stylesheets/*.css",
	"stylelint": "csslint public/stylesheets/*.css"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "bin",
      "coverage",
      "test/fixtures/coverage.js",
      "test/build/*"
    ]
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "ejs": "~2.5.6",
    "express": "~4.15.2",
    "morgan": "~1.8.1",
    "serve-favicon": "~2.4.2"
  },
  "devDependencies": {
    "babel-preset-env": "^1.4.0",
    "csslint": "^1.0.5",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.1",
    "gulp": "^3.9.1",
	"gulp-apidoc": "^0.2.6",
    "gulp-jshint": "^2.0.4",
    "gulp-mocha": "^4.3.0",
    "gulp-eslint": "^3.0.1",
    "gulp-stylelint": "^3.9.0",
    "istanbul": "^0.4.5",
	"jshint": "^2.9.4",
    "mocha": "^3.2.0",
    "nightwatch": "^0.9.14",
    "nyc": "^10.3.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0"
  }
}
